  "deb-libc6" {>= "2.17"}
  "deb-libx11-6" {>= "2-1.2.99.901"}
  "deb-libxext6"
  "deb-libxi6" {>= "2-1.2.99.4"}
  "deb-libxxf86vm1"
  ("deb-libgl1-mesa-glx" | "deb- libgl1")
]
