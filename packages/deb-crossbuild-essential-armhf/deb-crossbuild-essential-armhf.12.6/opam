  "deb-dpkg-cross"
  ("deb-g++-arm-linux-gnueabihf" {>= "4-8.3"} | "deb-g++-armhf")
  ("deb-gcc-arm-linux-gnueabihf" {>= "4-8.3"} | "deb-gcc-armhf")
]
