  "deb-libc6" {>= "2.14"}
  "deb-libgcc1" {>= "1-3.0"}
  "deb-libopencc2" {= "1.0.5-2"}
  "deb-libstdc++6" {>= "5.2"}
]
extra-source "opencc_1.0.5-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/o/opencc/opencc_1.0.5-2_amd64.deb"
}
