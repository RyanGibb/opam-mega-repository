opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i fontconfig_2.13.1-2_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r fontconfig"]
]
depends: [
  "deb-fontconfig-config"
  "deb-libc6" {>= "2.4"}
  "deb-libfontconfig1" {>= "2.13.0"}
  "deb-libfreetype6" {>= "2.2.1"}
]
extra-source "fontconfig_2.13.1-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/f/fontconfig/fontconfig_2.13.1-2_amd64.deb"
}
