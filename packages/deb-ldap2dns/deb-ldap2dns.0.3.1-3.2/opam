opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i ldap2dns_0.3.1-3.2_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r ldap2dns"]
]
depends: [
  "deb-libc6" {>= "2.7"}
  "deb-libldap-2-4-2" {>= "2.4.7"}
  ("deb-bind" | "deb-bind9" | "deb-djbdns" | "deb-djbdns-installer")
]
extra-source "ldap2dns_0.3.1-3.2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/l/ldap2dns/ldap2dns_0.3.1-3.2_amd64.deb"
}
