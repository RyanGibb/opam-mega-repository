opam-version: "2.0"
build: [
  ["sh" "-c" "sudo dpkg -i python-opengl_3.1.0+dfsg-2_amd64.deb"]
]
remove: [
  ["sh" "-c" "sudo dpkg -r python-opengl"]
]
depends: [
  "deb-freeglut3"
  "deb-python-any" {< "2.8"}
  "deb-python-any" {>= "2.7~"}
  ("deb-libgl1-mesa-glx" | "deb- libgl1")
  ("deb-libglu1-mesa" | "deb- libglu1")
  ("deb-python" | "deb-python2")
]
extra-source "python-opengl_3.1.0+dfsg-2_amd64.deb" {
  src: "http://ftp.debian.org/debian/pool/main/p/pyopengl/python-opengl_3.1.0+dfsg-2_all.deb"
}
